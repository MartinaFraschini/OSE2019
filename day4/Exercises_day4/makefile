### CPP compiler wrapper
CXX=mpicxx

### Optimization flags
FFLAGS=-O3 -fopenmp

#######################################################################	

all: MCpi.exec
 
#######################################################################	

## Example 1a
MCpi.exec: MCpi.cpp
	$(CXX) $(FFLAGS) MCpi.cpp -o MCpi.exec	
	
#######################################################################	

clean :
	rm -f *.exec

#######################################################################	
